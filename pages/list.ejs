<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="/main.css" rel="stylesheet" />
  </head>
  <body class="grey-bg">
    <%- include('nav.ejs') %>
    <input class="search" />
    <button class="search-send">ê²€ìƒ‰</button>
    <script>
      document.querySelector(".search-send").addEventListener("click", () => {
        const value = document.querySelector(".search").value;
        location.href = "/search?val=" + value;
      });
    </script>
    <div class="white-bg">
      <% posts.forEach((post) => { %>
      <div class="list-box">
        <h4>
          <a href="/detail/<%= post._id %>"> <%= post.title %> </a>
          <a href="/edit/<%= post._id %>">ğŸ“</a>
          <span class="delete" data-id="<%= post._id %>">ğŸ—‘ï¸</span>
        </h4>
        <p><%= post.content %></p>
      </div>
      <% }) %>
      <a href="/list/next/<%= posts[posts.length - 1]._id %>">ë‹¤ìŒ</a>
    </div>
    <script type="application/json" src="../navigate.js"></script>
    <script>
      for (let i = 0; i < "<%= posts.length %>"; i++) {
        document
          .querySelectorAll(".delete")
          [i].addEventListener("click", function (e) {
            fetch("/delete", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ id: e.target.dataset.id }),
            }).then((r) => {
              e.target.parentElement.parentElement.style.display = "none";
            });
          });
      }
    </script>
    <script>
      const eventSource = new EventSource("/stream/list");
      eventSource.addEventListener("msg", (e) => {
        console.log(e.data);
      });
    </script>
  </body>
</html>
